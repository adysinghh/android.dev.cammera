<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/selling"
        android:layout_width="385dp"
        android:layout_height="406dp"
        android:background="@drawable/image_view"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toTopOf="@+id/uploadbt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/uploadbt"
        android:layout_width="174dp"
        android:layout_height="75dp"
        android:backgroundTint="#ADA7B6"
        android:text="Upload"
        android:textSize="30dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="398dp"
        android:layout_height="169dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selling"
        app:layout_constraintVertical_bias="0.597"
        app:lottie_rawRes="@raw/ui"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>